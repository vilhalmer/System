{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--compile-commands-dir=build"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },

  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true
}
