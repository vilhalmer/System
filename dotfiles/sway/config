# Floating
#
floating_minimum_size 10 x 10

#
# Gaps
#
    default_border normal 0 # This currently doesn't work.
    # edge gaps don't work as intended either, and end up doubling the gaps
    gaps edge_gaps off
    gaps 12

include $HOME/.config/sway/config.d/*
